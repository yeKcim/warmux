      <max_angle>89</max_angle>
      <explosion_range>65</explosion_range>
      <blast_range>2.5</blast_range>
      <blast_force>6</blast_force>
      <timeout>6</timeout>
      <rebound_factor>0.5</rebound_factor>
    </gnulauncher>
    
    <bazooka>
      <position origin="hand" x="-20" y="-18" />
