      <nbr_obus>3</nbr_obus>
      <damage>30</damage>
      <mass>3</mass>
      <speed>7</speed>
    </air_attack> 

    <minelauncher>
      <position origin="hand" x="-4" y="-4" />
      <nb_ammo>-1</nb_ammo>
      <damage>50</damage>
      <mass>1</mass>
      <explosion_range>50</explosion_range>
      <blast_range>3</blast_range>
      <blast_force>5</blast_force>
      <detection_range>1</detection_range>
      <timeout>1</timeout>
      <escape_time>2</escape_time>
    </minelauncher>

    <skip_turn>
      <position origin="over" x="0" y="-5" />
      <nb_ammo>-1</nb_ammo>
    </skip_turn> 
  </weapons>

  <character>
    <energy initial="100" maximum="200" />
    <mass>100</mass>
    <jump strength="8" angle="-60" />
    <super_jump strength="11" angle="-80" />
    <air_resist_factor>0.0</air_resist_factor>
  </character>

</game_mode>
